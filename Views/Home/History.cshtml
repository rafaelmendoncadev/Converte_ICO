@model IEnumerable<Converte_ICO.Models.ConversionRecord>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Histórico de Conversões";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Histórico de conversões</h2>
                <a class="btn btn-outline-secondary" asp-action="Index">Voltar</a>
            </div>

            @if (!Model?.Any() ?? true)
            {
                <div class="alert alert-info">Nenhuma conversão encontrada.</div>
            }
            else
            {
                <div class="list-group">
                    @foreach (var item in Model)
                    {
                        <div class="list-group-item">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <h5 class="mb-1">@item.OriginalFileName</h5>
                                    <small class="text-muted">@item.CreatedAt.ToLocalTime().ToString("g")</small>
                                    <div class="mt-2"><small class="text-muted">Tamanhos: @item.Sizes</small></div>
                                </div>
                                <div class="col-md-6 text-end">
                                    <a class="btn btn-success me-2" asp-action="Download" asp-route-fileName="@item.ConvertedFileName">Baixar</a>
                                    <form asp-action="DeleteRecord" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Deseja excluir este registro?');">Excluir</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                @* Simple pagination placeholder: if many items, implement server-side paging later *@
            }
        </div>
    </div>
</div>
