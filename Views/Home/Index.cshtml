@model Converte_ICO.Models.ImageUploadViewModel
@{
    ViewData["Title"] = "Conversor de Imagens para ICO";
}

<!-- HERO -->
<div class="bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h1 class="display-5 fw-bold">Transforme qualquer imagem em ícone .ICO com qualidade profissional</h1>
                <p class="lead">Rápido, seguro e fácil — ideal para desenvolvedores, designers e pequenas empresas. Cadastre-se gratuitamente e comece a salvar seus ícones multi-resolução hoje mesmo.</p>

                <div class="d-flex gap-2 mt-4">
                    <a class="btn btn-light btn-lg" asp-area="Identity" asp-page="/Account/Register">Registrar-se grátis</a>
                    <a class="btn btn-outline-light btn-lg" asp-controller="Home" asp-action="Convert">Começar a converter</a>
                </div>

                <div class="mt-4 text-white-50">
                    <small>Suporta PNG, JPG, JPEG e SVG · Conversões locais · Arquivos removidos automaticamente</small>
                </div>
            </div>
            <div class="col-lg-5 text-center d-none d-lg-block">
                <img src="~/images/hero-ico.svg" alt="Conversor ICO" class="img-fluid" style="max-height: 280px;" />
            </div>
        </div>
    </div>
</div>

<!-- FEATURES -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row text-center mb-4">
            <div class="col-lg-8 mx-auto">
                <h2 class="h3">Por que usar o Conversor de ICO?</h2>
                <p class="text-muted">Recursos desenhados para facilitar seu fluxo de trabalho e garantir resultados profissionais.</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-bolt fa-2x text-primary mb-3"></i>
                        <h5 class="card-title">Conversão instantânea</h5>
                        <p class="card-text text-muted">Processamento rápido para obter seus arquivos .ICO em segundos.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-shield-alt fa-2x text-primary mb-3"></i>
                        <h5 class="card-title">Privacidade e segurança</h5>
                        <p class="card-text text-muted">Arquivos processados localmente e removidos automaticamente.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-folder-plus fa-2x text-primary mb-3"></i>
                        <h5 class="card-title">Histórico de conversões</h5>
                        <p class="card-text text-muted">Usuários registrados podem salvar e acessar conversões anteriores.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- TRUST / STATS -->
<section class="py-4 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-6 col-md-3 mb-3">
                <h3 class="mb-0">+10k</h3>
                <small class="text-muted">Ícones gerados</small>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <h3 class="mb-0">99%</h3>
                <small class="text-muted">Satisfação dos usuários</small>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <h3 class="mb-0">24h</h3>
                <small class="text-muted">Tempo médio de processamento</small>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <h3 class="mb-0">Grátis</h3>
                <small class="text-muted">Plano básico</small>
            </div>
        </div>
    </div>
</section>

<!-- TESTIMONIALS -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center mb-3">
            <div class="col-lg-8 text-center">
                <h2 class="h4">O que dizem nossos usuários</h2>
                <p class="text-muted">Depoimentos reais de pessoas que usaram e aprovaram</p>
            </div>
        </div>

        <div id="testimonialsCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="d-flex align-items-center flex-column text-center">
                        <img src="~/images/avatar1.png" class="rounded-circle mb-3" alt="" style="width:72px;height:72px;object-fit:cover;" />
                        <blockquote class="blockquote">
                            <p class="mb-2">"Rápido e sem complicação — salvou meu projeto quando precisava do ícone na última hora."</p>
                            <footer class="blockquote-footer">Mariana Silva, Designer</footer>
                        </blockquote>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="d-flex align-items-center flex-column text-center">
                        <img src="~/images/avatar2.png" class="rounded-circle mb-3" alt="" style="width:72px;height:72px;object-fit:cover;" />
                        <blockquote class="blockquote">
                            <p class="mb-2">"Ótima qualidade de conversão e muito fácil de usar. Recomendo para desenvolvedores."</p>
                            <footer class="blockquote-footer">Carlos Pereira, Desenvolvedor</footer>
                        </blockquote>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="d-flex align-items-center flex-column text-center">
                        <img src="~/images/avatar3.png" class="rounded-circle mb-3" alt="" style="width:72px;height:72px;object-fit:cover;" />
                        <blockquote class="blockquote">
                            <p class="mb-2">"Cadastro simples e benefícios reais — amo que tenho meu histórico de ícones."</p>
                            <footer class="blockquote-footer">João Souza, Freelancer</footer>
                        </blockquote>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#testimonialsCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#testimonialsCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Próximo</span>
            </button>
        </div>
    </div>
</section>

<div class="container text-center my-5">
    <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Convert">Acessar o Conversor</a>
</div>

<footer class="text-center text-muted mb-5">
    <small>Ferramenta gratuita para conversão de imagens. Seus arquivos são processados localmente e removidos automaticamente.</small>
</footer>

@section Scripts {
    <script>
        $(function () {
            // Initialize carousel
            var carousel = new bootstrap.Carousel('#testimonialsCarousel', {
                interval: 5000
            });
        });
    </script>
}
