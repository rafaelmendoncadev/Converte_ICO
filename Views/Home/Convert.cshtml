@model Converte_ICO.Models.ImageUploadViewModel
@{
    ViewData["Title"] = "Conversor";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="text-center mb-4">
                <h2>Conversor de ICO</h2>
                <p class="text-muted">Faça upload da sua imagem e gere o arquivo .ico</p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Upload da Imagem</h5>
                </div>
                <div class="card-body">
                    <div id="spinner" class="d-none text-center">
                        <div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div>
                        <p>Processando...</p>
                    </div>

                    @if (string.IsNullOrEmpty(Model.ImagePreviewUrl))
                    {
                        <form asp-action="Upload" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                <label asp-for="ImageFile" class="form-label">Selecione uma imagem</label>
                                <input asp-for="ImageFile" type="file" class="form-control" accept=".png,.jpg,.jpeg,.svg" />
                                <div class="form-text">Formatos aceitos: PNG, JPG, JPEG, SVG (máximo 10MB)</div>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Fazer Upload</button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">Preview</div>
                                    <div class="card-body text-center">
                                        <img src="@Model.ImagePreviewUrl" class="img-fluid" style="max-height:300px;" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header">Opções</div>
                                    <div class="card-body">
                                        <form asp-action="Convert" method="post">
                                            @Html.AntiForgeryToken()
                                            <div class="mb-3">
                                                <label class="form-label">Tamanhos</label>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" asp-for="Size16" /> <label class="form-check-label">16x16</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" asp-for="Size32" /> <label class="form-check-label">32x32</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" asp-for="Size64" /> <label class="form-check-label">64x64</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" asp-for="Size128" /> <label class="form-check-label">128x128</label>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label asp-for="CustomFileName" class="form-label">Nome do arquivo</label>
                                                <input asp-for="CustomFileName" class="form-control" />
                                            </div>
                                            <div class="d-grid">
                                                <button id="convertButton" type="submit" class="btn btn-success" disabled>Converter</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <a asp-action="Reset" class="btn btn-outline-secondary">Selecionar outra imagem</a>
                        </div>
                    }

                    @if (Model.IsConverted && !string.IsNullOrEmpty(Model.ConvertedImagePath))
                    {
                        <div class="mt-4">
                            <div class="card border-success">
                                <div class="card-header bg-success text-white">Download</div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6>Conversão concluída</h6>
                                            <p class="mb-0">Arquivo: @(Model.CustomFileName ?? "icon").ico</p>
                                        </div>
                                        <div>
                                            <a id="downloadButton" class="btn btn-success" asp-action="Download" asp-route-fileName="@Model.ConvertedImagePath" disabled>Baixar ICO</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const convertButton = $('#convertButton');
            const downloadButton = $('#downloadButton');

            // Enable convert button if an image is uploaded
            if ("@Model.ImagePreviewUrl" != "") {
                convertButton.prop('disabled', false);
            }

            // Enable download button if conversion is done
            if ("@Model.IsConverted" == "True") {
                downloadButton.prop('disabled', false);
            }
        });
    </script>
}